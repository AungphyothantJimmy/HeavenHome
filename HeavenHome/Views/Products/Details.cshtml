@model Product

@{
    ViewData["Title"] = "Product details";
}

<div class="row">
    
        <div class="col-md-8 offset-2">
            <div class="card mb-3" style="max-width: 540px;">
                <div class="row g-0">
                    <div class="col-md-12">
                        <div class="card-header text-white bg-info">
                            <p class="card-text">
                                <h5 class="card-title">
                                    @Model.Name
                                </h5>
                            </p>
                        </div>
                    </div>
                    <div class="col-md-8">
                        <img src="@Model.ImageURL" width="100%" alt="@Model.Name">
                    </div>
                    <div class="col-md-8">
                        <div class="card-body">
                            <p class="card-text">@Model.Description</p>
                            <p class="card-text"><b>Company: </b>
                                <a asp-controller="Companies" asp-action="Details" asp-asp-all-route-id="@Model.CompanyId">
                                @Model.Company.Name
                                </a>
                            </p>
                            <p class="card-text"><b>Category: </b>@Model.ProductCategory</p>
                            <p class="card-text">
                                <b>Status: </b>
                                <span class="badge bg-success text-white">In Stock</span>
                            </p>
                            <p class="card-text">
                                <b>Material: </b>
                                <hr />
                                <div class="row">
                                    @foreach (var material in Model.Materials_Products)
                                {
                                    <div class="column text-center">
                                        <img class="border-info rounded-circle" src="@material.Material.PictureURL" style="max-width: 150px" alt="Alternate Text" />
                                        <a asp-controller="Materials" asp-action="Details" asp-route-id="@material.MaterialId">@material.Material.Name</a>
                                    </div>
                                }
                            </div>
                            </p>
                        </div>
                    </div>
                    <div class="col-md-12">
                        <div class="card-footer ">
                            <p class="card-text">
                                <a class="btn btn-outline-primary float-right" asp-action="Index">
                                    Back to List
                                </a>
                            <a class="btn btn-success text-white" asp-controller="Orders" asp-action="AddItemToShoppingCart" asp-route-id="@Model.Id"><i class="bi bi-cart-plus"></i> Add to Cart (Price @Model.Price.ToString("c"))</a>
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
</div>
